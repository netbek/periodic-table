{%- macro elementCell(element, showAtDefault=false, showAtWide=false, addClassName="") %}
  {%- set className = "nb-periodic-table-cell" %}
  {%- if showAtDefault %}
    {%- set className = className + " nb-periodic-table-cell--at-default" %}
  {%- endif %}
  {%- if showAtWide %}
    {%- set className = className + " nb-periodic-table-cell--at-wide" %}
  {%- endif %}
  {%- if addClassName %}
    {%- set className = className + " " + addClassName %}
  {%- endif %}
<td class="{{ className }}" data-block="{{ element.block }}" data-category="{{ element.category }}">
  <span class="nb-periodic-table-element">
    <span class="nb-periodic-table-element__basic">
      <span class="nb-periodic-table-element__atomic-number">
        {{ element.atomicNumber }}
      </span>
      <span class="nb-periodic-table-element__symbol">
        {{ element.symbol }}
      </span>
    </span>
    <span class="nb-periodic-table-element__extended">
      <span class="nb-periodic-table-element__name">
        {{ element.name }}
      </span>
      <span class="nb-periodic-table-element__properties">
        <span class="nb-periodic-table-element__atomic-mass">
          {%- if element.atomicMass %}
            {{ element.atomicMass }}
          {%- endif %}
        </span>
        <span class="nb-periodic-table-element__electronegativity">
          {%- if element.electronegativity %}
            {{ element.electronegativity }}
          {%- endif %}
        </span>
      </span>
    </span>
  </span>
</td>
{%- endmacro %}
